<section class="page-section" id="provider-list">
    <div class="container">
        <h2 class="text-center mt-0">At Your Service</h2>
        <hr class="divider my-4" />
        <a href="/providers/provider-add-form/"  class="btn btn-secondary btn-sm">Add new provider</a>
        <div class="table table-hover table-bordered table-responsive">
           <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">age</th>
                        <th scope="col">Hobby</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                    <tbody>
                        {{#each providers}}
                        <tr>
                            <td scope="row">{{id}}</td>
                            <td scope="row">{{name}}</td>
                            <td scope="row">{{age}}</td>
                            <td scope="row">{{hobby.sport}}</td>
                            <td scope="row">
                                <a href="/providers/details/{{id}}" " class=btn btn-info btn-sm">More info</a>
                                <a href="/providers/edit/{{id}}" " class=btn btn-secondary btn-sm">edit</a>
                                <a href="#myModal{{id}}" data-target="#myModal" class="btn btn-danger btn-sm"  data-toggle="modal">Delete</a>
                            </td>
                        </tr>
                        <!-- Modal HTML -->
                        <div id="myModal" class="modal fade">
                            <div class="modal-dialog modal-confirm">
                                <div class="modal-content">
                                    <div class="modal-header flex-column">
                                        <div class="icon-box">
                                            <i class="material-icons">&#xE5CD;</i>
                                        </div>
                                        <h4 class="modal-title w-100">Are you sure?</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Do you really want to delete these records? This process cannot be undone.</p>
                                    </div>
                                    <div class="modal-footer justify-content-center">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <a href="/providers/delete/{{id}}" type="button" class="btn btn-danger">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                            {{/each}}
                    </tbody>
           </table>
        </div>
    </div>
</section>